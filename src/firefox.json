{
    "manifest_version": 3,
    "name": "PDF Download",
    "version": "0.0.1",

    "description": "Browser extension that lets you download embedded PDF files.",

    "action": {
        "default_title": "Show available PDFs",
        "default_popup": "popup.html"
    },

    "background": {
        "type": "module",
        "scripts": ["worker.js"]
    },

    "permissions": [
        "webRequest",
        "tabs"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}